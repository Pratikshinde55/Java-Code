###... Railway Reservation System including all functionalities: #################

public class Main {
    public static void main(String[] args) {
        RailwayReservationSystem railwayReservationSystem = new RailwayReservationSystem();
        railwayReservationSystem.run();
    }
}


######################################################################Class-1 -  "RailwayReservationSystem" ##########
import java.util.ArrayList;
import java.util.Scanner;



public class RailwayReservationSystem {
    private ArrayList<Train> trains = new ArrayList<>();
    private Scanner scanner = new Scanner(System.in);

    public RailwayReservationSystem() {
        trains.add(new Train("Mumbai - Delhi", "13:05", 50, 1010));
        trains.add(new Train("Delhi - Jaipur", "7:00", 50, 2013));
        trains.add(new Train("Prayagraj - Delhi", "10:00", 50, 3045));
    }

    public void run() {
        boolean running = true;

        while (running) {
            System.out.println("Railway Reservation System");
            System.out.println("1. Train Information");
            System.out.println("2. Seat Availability");
            System.out.println("3. Booking");
            System.out.println("4. Canceling");
            System.out.println("5. Ticket Display");
            System.out.println("6. Exit");
            System.out.print("Enter your choice: ");
            int choice = scanner.nextInt();

            switch (choice) {
                case 1:
                    displayTrainInformation();
                    break;
                case 2:
                    checkSeatAvailability();
                    break;
                case 3:
                    bookTicket();
                    break;
                case 4:
                    cancelTicket();
                    break;
                case 5:
                    displayTicket();
                    break;
                case 6:
                    running = false;
                    break;
                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
            }
        }

        scanner.close();
    }

    private void displayTrainInformation() {
        System.out.println("Train Information");
        System.out.println("Train Name\t\tTime\t\tPassenger Strength\tTrain Number");
        for (Train train : trains) {
            System.out.println(train.getName() + "\t" + train.getTime() + "\t" +
                    train.getPassengerStrength() + "\t\t\t" + train.getTrainNumber());
        }
    }

    private void checkSeatAvailability() {
        System.out.print("Enter train number: ");
        int trainNumber = scanner.nextInt();
        Train train = getTrain(trainNumber);
        if (train != null) {
            int availableSeats = train.getPassengerStrength() - train.bookedSeats.size();
            System.out.println("Available seats for Train " + trainNumber + ": " + availableSeats);
        } else {
            System.out.println("Train not found.");
        }
    }

    private void bookTicket() {
        System.out.print("Enter train number: ");
        int trainNumber = scanner.nextInt();
        Train train = getTrain(trainNumber);
        if (train != null) {
            if (train.bookSeat(trainNumber)) {
                System.out.println("Seat booked successfully!");
            } else {
                System.out.println("Sorry, no seats available.");
            }
        } else {
            System.out.println("Train not found.");
        }
    }

    private void cancelTicket() {
        System.out.print("Enter train number: ");
        int trainNumber = scanner.nextInt();
        Train train = getTrain(trainNumber);
        if (train != null) {
            System.out.print("Enter seat number: ");
            int seatNumber = scanner.nextInt();
            if (train.cancelSeat(seatNumber)) {
                System.out.println("Ticket canceled successfully!");
            } else {
                System.out.println("Invalid seat number or seat not booked.");
            }
        } else {
            System.out.println("Train not found.");
        }
    }

    private void displayTicket() {
        System.out.print("Enter train number: ");
        int trainNumber = scanner.nextInt();
        Train train = getTrain(trainNumber);
        if (train != null) {
            train.displayBookedSeats();
        } else {
            System.out.println("Train not found.");
        }
    }

    private Train getTrain(int trainNumber) {
        for (Train train : trains) {
            if (train.getTrainNumber() == trainNumber) {
                return train;
            }
        }
        return null;
    }
}

################################class2-  "Train ##################

import java.util.ArrayList;

public class Train {
    private String name;
    private String time;
    private int passengerStrength;
    private int trainNumber;
    ArrayList<Integer> bookedSeats;

    public Train(String name, String time, int passengerStrength, int trainNumber) {
        this.name = name;
        this.time = time;
        this.passengerStrength = passengerStrength;
        this.trainNumber = trainNumber;
        this.bookedSeats = new ArrayList<>();
    }

    public String getName() {
        return name;
    }

    public String getTime() {
        return time;
    }

    public int getPassengerStrength() {
        return passengerStrength;
    }

    public int getTrainNumber() {
        return trainNumber;
    }

    public boolean bookSeat(int seatNumber) {
        if (bookedSeats.size() < passengerStrength) {
            bookedSeats.add(seatNumber);
            return true;
        } else {
            return false;
        }
    }

    public boolean cancelSeat(int seatNumber) {
        if (bookedSeats.contains(seatNumber)) {
            bookedSeats.remove(Integer.valueOf(seatNumber));
            return true;
        } else {
            return false;
        }
    }

    public void displayBookedSeats() {
        System.out.println("Booked Seats for Train " + trainNumber + ": " + bookedSeats);
    }
}

